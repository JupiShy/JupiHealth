<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.MainPage" MinimumWidthRequest="400"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#624E88" Offset="0.0" />
            <GradientStop Color="#8967B3" Offset="0.25" />
            <GradientStop Color="#CB80AB" Offset="0.65" />
            <GradientStop Color="#E6D9A2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout
            Padding="25,20"
            Spacing="20">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label
                    x:Name="timeOfDayLabel"
                    Text="Добрий день,"
                    FontAttributes="Bold"
                    TextColor="AliceBlue"
                    FontSize="25"
                    HorizontalTextAlignment="Center"/>
                <Label
                    x:Name="userNameLabel"
                    Text="name"
                    FontAttributes="Bold"
                    TextColor="AliceBlue"
                    FontSize="25"
                    HorizontalTextAlignment="Center"/>
            </HorizontalStackLayout>
            

            <Frame BackgroundColor="AliceBlue"
               CornerRadius="30"
               BorderColor="Transparent"
               MaximumWidthRequest="500"
               HasShadow="False"
               Padding="10"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Center">

                <Grid Padding="5" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Text="ІМТ:"
                        TextColor="#593E99"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        Margin="20,0,0,0"
                        Grid.Row="0" Grid.Column="1"/>

                    <Label
                        x:Name="currentIndexLabel"
                        Text="XX.X"
                        TextColor="#593E99"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        Margin="20,0,0,0"
                        Grid.Row="0" Grid.Column="2"/>

                    <Button 
                        x:Name="changeIndexButton"
                        Text="···" FontAttributes="Bold" FontFamily="Tahoma"
                        BackgroundColor="AliceBlue" TextColor="#313E77" FontSize="25"
                        Margin="0, -5, 0, -5"
                        Padding="-5"
                        IsEnabled="True" WidthRequest="20" HeightRequest="20" CornerRadius="50"
                        Grid.Row="0" Grid.Column="3">
                    </Button>

                    <BoxView Color="#593E99"
                             Margin="30, 0, 30 ,0"
                             HeightRequest="2"
                             HorizontalOptions="Fill"
                             Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"/>


                    <Label
                        Text="Ціль:"
                        TextColor="#593E99"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Margin="20,0,0,0"
                        Grid.Row="2" Grid.Column="1"/>
                    <Label
                        x:Name="targetWeightLabel"
                        Text="XX.X"
                        TextColor="#593E99"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Margin="20,0,0,0"
                        Grid.Row="2" Grid.Column="2"/>
                    <Button 
                        x:Name="changeTargetButton"
                        Text="···" FontAttributes="Bold" FontFamily="Tahoma"
                        Margin="0, -5, 0, -5"
                        Padding="-5"
                        BackgroundColor="AliceBlue" TextColor="#313E77" FontSize="25"
                        IsEnabled="True" WidthRequest="20" HeightRequest="20" CornerRadius="50"
                        Grid.Row="2" Grid.Column="3">
                    </Button>

                </Grid>

            </Frame>

            <BoxView Color="AliceBlue"
                     HeightRequest="10"
                     MaximumWidthRequest="350"
                     CornerRadius="20"
                     HorizontalOptions="Fill"/>

            <Frame BackgroundColor="AliceBlue"
                   MaximumWidthRequest="500"
                   CornerRadius="30"
                   BorderColor="Transparent"
                   HasShadow="False"
                   Padding="10"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center">
                <Grid Padding="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Label 
                        Text="Водa:" 
                        TextColor="#593E99"
                        FontAttributes="Bold"
                        HorizontalOptions="Start" 
                        HorizontalTextAlignment="Start"
                        VerticalOptions="Center"
                        Grid.Column="1" 
                        FontSize="20"
                        SemanticProperties.HeadingLevel="Level2"/>
                    <Label 
                        Text="XXXX мл" 
                        TextColor="#593E99"
                        HorizontalOptions="Start" 
                        HorizontalTextAlignment="Start"
                        VerticalOptions="Center"
                        FontSize="20"
                        Grid.Column="2"/>


                    <Button 
                        Text="+" FontAttributes="Bold" FontFamily="Tahoma"
                        BackgroundColor="#313E77" TextColor="AliceBlue" FontSize="20"
                        Padding="5" Clicked="AddWaterButtonClicked"
                        IsEnabled="True" WidthRequest="35" HeightRequest="35" CornerRadius="50"
                        Grid.Column="3">
                    </Button>
                </Grid>

            </Frame>

            <BoxView Color="AliceBlue"
                     HeightRequest="10"
                     MaximumWidthRequest="350"
                     CornerRadius="20"
                     HorizontalOptions="Fill"/>

            <Frame BackgroundColor="AliceBlue"
                   CornerRadius="20"
                   BorderColor="Transparent"
                   MaximumWidthRequest="500"
                   HasShadow="False"
                   Padding="10"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center">

                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Text="Цей тиждень:"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#593E99"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10"
                           Grid.Column="1"></Label>
                    
                    <Frame BackgroundColor="White"
                           CornerRadius="20"
                           BorderColor="Transparent"
                           MaximumWidthRequest="400"
                           MinimumWidthRequest="250"
                           HasShadow="False"
                           Padding="10"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"
                           Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">

                        <charts:ChartView x:Name="ChartWeek" HeightRequest="210"></charts:ChartView>
                    </Frame>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
