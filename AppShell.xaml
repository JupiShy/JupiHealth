<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HealthApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HealthApp"
    Shell.FlyoutBehavior="Disabled"
    Title="HealthApp"
    TitleColor="HotPink"
    BackgroundColor="Black">

    <TabBar>
        <Tab Title="Головна">
            <ShellContent
            Title="Головна"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="Медикаменти">
            <ShellContent
            Title="Споживання"
            ContentTemplate="{DataTemplate local:ConsumingPage}"
            Route="ConsumingPage" />
        </Tab>
        <Tab Title="Налаштування">
            <ShellContent
            Title="Споживання"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="SettingsPage" />
        </Tab>
    </TabBar>

</Shell>
